@model QuizIt.Models.ViewModels.CreateQuizVM

@{
    ViewData["Title"] = "Create";
}

@section Hero{

    <div class="hero-image">
        <div class="row">
            
                <div class="hero-text">
                    <h5>Skapa nytt quiz</h5>
                </div>
            
        </div>
    </div>
}
<div class="text-block text-block-create">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Quiz.Name" class="control-label">Namn</label>
                    <input asp-for="Quiz.Name" class="form-control" />
                    <span asp-validation-for="Quiz.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Skapa quiz" class="btn btn-create" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Se alla quiz</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
