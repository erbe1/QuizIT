        <div class="text-block text-block-contact text-block-quiz">

            <div id="playQuiz">

                <div>
                    <p>Anslutna spelare:</p>
                    <ul id="joinedPlayers"></ul>
                </div>
                <hr />

                @if (!User.Identity.IsAuthenticated)
                {
                    <p>Skriv ditt namn </p><input type="text" id="userInput" style="color:black" />
                    <input id="nameButton" type="button" value="Spara namn" style="color:black" />
                    <hr />
                }


                <div>Fråga <span id="questionNumber"></span><div id="question"></div></div>
                <hr />

                @if (User.Identity.IsAuthenticated)
                {
                    <div>Svar: <span id="answer"></span></div>
                    <div id="spotifyUrl"></div>
                    <hr />


                }
                else
                {
                    <div>
                        <input id="answerButton" type="button" class="sendButton" value="Jag kan svaret!!" style="color:black" />
                    </div>
                    <hr />

                }


                <p>Spelare som tryckt på knappen:</p>
                <div>
                    <ul id="resultList"></ul>
                </div>



                @if (User.Identity.IsAuthenticated)
                {
                    <hr />
                    <button onclick="nextQuestion()" style="color:black">Nästa fråga</button>

                }


            </div>

            <div id="quizFinished">
            </div>
        </div>
    </div>


