@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrera dig som Quizledare!";
}

@section Hero{

    <div class="herooo">
    </div>

    <div class="container" style="margin-top:-600px;">
        <div class="row">

            <div class="col-sm-12" style="color:#fff">
                <h5>
                    Registrera Quizledare
                </h5>
            </div>
        </div>

        <div class="text-block text-block-login">
            <div class="row">
                <div class="col-md-4">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password">Lösenord</label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword">Upprepa lösenord</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-default">Registrera</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div style="height:380px"></div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
